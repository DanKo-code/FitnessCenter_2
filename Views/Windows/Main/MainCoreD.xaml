        Background="Transparent">

    <Window.Resources>
        <conv:FontSizeConverter x:Key="FontSizeConverter"/>
        <conv:SumConverter x:Key="SumConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
