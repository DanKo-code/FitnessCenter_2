        xmlns:help="clr-namespace:FitnessCenter.Helpers" 
        
        xmlns:conv="clr-namespace:FitnessCenter.Converters"
        
        Title="MainCoreD" 
        d:Width="1550" d:Height="1000"
        ResizeMode="CanResize"
